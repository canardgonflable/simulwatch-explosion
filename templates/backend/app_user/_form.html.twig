<div class="ui two column stackable grid">
    {{ form_errors(form) }}
    <div class="column">
        <div class="ui segment">
            <h4 class="ui dividing header">{{ 'sylius.ui.app_user_details'|trans }}</h4>
            {{ form_row(form.username) }}
            {{ form_row(form.email) }}
        </div>
    </div>

    <div class="column">
        <div class="ui segment">
            <h4 class="ui dividing header">{{ 'sylius.ui.account_credentials'|trans }}</h4>
            <div id="user-form" {% if form.vars.data.id is not defined %} style="display: none" {% endif %}>
                {{ form_row(form.plainPassword) }}
                {{ form_row(form.enabled) }}
            </div>
        </div>
    </div>
</div>
