<?xml version="1.0" encoding="UTF-8"?>

<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping">

    <mapped-superclass name="App\Entity\Customer\Customer" table="sylius_customer">

        <one-to-one field="user" target-entity="App\Model\AppUserInterface" mapped-by="customer">
            <cascade>
                <cascade-persist/>
            </cascade>
            <join-column name="user_id" referenced-column-name="id"/>
        </one-to-one>

    </mapped-superclass>
</doctrine-mapping>
