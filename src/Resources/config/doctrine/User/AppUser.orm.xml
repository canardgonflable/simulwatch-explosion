<?xml version="1.0" encoding="UTF-8"?>

<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping">

    <mapped-superclass name="App\Entity\User\AppUser" table="sylius_app_user">

        <field name="avatar" column="avatar" type="string" nullable="true"/>
        <field name="discordId" column="discord_id" type="string" nullable="true"/>
        <field name="accessToken" column="access_token" type="string" nullable="true"/>

        <one-to-one field="customer" target-entity="App\Model\CustomerInterface" inversed-by="user">
            <cascade>
                <cascade-persist/>
            </cascade>
            <join-column name="customer_id" referenced-column-name="id" nullable="false"/>
        </one-to-one>

    </mapped-superclass>
</doctrine-mapping>
